extends ../layouts/default

block content
  row
    section.col-md-4.col
      .inner-block
        h3 Users online
        ul#users
      form.inner-block#changename-form
        h3 Change name
        .form-group
          label Naam:
          input#name-field(type='text', placeholder='New name').form-control
        button.btn.btn-primary#change-btn Change name

    section.col-md-4.col
      form.inner-block#message-form
        h3 Send message
        .form-group
          label(for='destionation') Send message to:
          select(name='destination' id='destination').form-control
        .form-group
          label(for='message') Message:
          textarea(rows='7' cols='30' name='message' id='message-box').form-control
        button.btn.btn-primary Send message
    section.col-md-4.col
      .inner-block
        h3 Received messages
        #messages
block scripts
  script(src='https://cdn.socket.io/socket.io-1.3.7.js')
  script(src='/javascripts/chat.js')